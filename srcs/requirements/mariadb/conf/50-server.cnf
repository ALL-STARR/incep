[mysqld]               # Section principale pour le serveur MariaDB

# ExÃ©cuter MariaDB sous lâ€™utilisateur mysql pour des raisons de sÃ©curitÃ©
user = mysql

# Port par dÃ©faut pour les connexions MySQL (peut Ãªtre modifiÃ© si nÃ©cessaire)
# port = 3306

# Fichier contenant le PID (identifiant de processus) (pas forcÃ©ment nÃ©cessaire)
pid-file = /run/mysqld/mysqld.pid

# RÃ©pertoire dâ€™installation de MariaDB
basedir = /usr

# Emplacement des fichiers de donnÃ©es de la base
datadir = /var/lib/mysql

# RÃ©pertoire pour les fichiers temporaires
tmpdir = /tmp

# RÃ©pertoire contenant les fichiers de traduction
lc-messages-dir = /usr/share/mysql

# Langue utilisÃ©e pour les messages du serveur
lc-messages = en_US

# DÃ©sactiver le verrouillage externe (amÃ©liore les performances en environnement conteneurisÃ©)
skip-external-locking

# IMPORTANT : accepter les connexions depuis toutes les interfaces rÃ©seau
# Cela permet aux autres conteneurs Docker (comme WordPress) de se connecter
bind-address = 0.0.0.0

# Supprimer automatiquement les anciens logs aprÃ¨s 10 jours
expire_logs_days = 10

# Encodage utilisÃ© par dÃ©faut (utf8mb4 prend en charge les emojis et caractÃ¨res internationaux)
character-set-server = utf8mb4
collation-server = utf8mb4_general_ci

#!/bin/bash

echo "ğŸš€ DÃ©marrage de l'initialisation de MariaDB..."

# S'assure que la variables requises ne soient pas vides (-z)
if [ -z "$SQL_ROOT_PASSWORD" ] || [ -z "$SQL_DATABASE" ] || [ -z "$SQL_USER" ] || [ -z "$SQL_PASSWORD" ]; then
    echo "âŒ Variables d'environnement requises manquantes."
    exit 1
fi

# Lancer le service MariaDB
service mariadb start

echo "ğŸ”— Connexion Ã  la base de donnÃ©es..."
# Attendre que MariaDB soit prÃªt Ã  accepter des connexions
MAX_RETRIES=30
COUNT=0
while [ $COUNT -lt $MAX_RETRIES ]; do
		if mysqladmin ping -h"localhost" --silent; then
				echo "âœ… Connexion Ã  la base de donnÃ©es Ã©tablie !"
				break
		fi
		echo "ğŸ”„ En attente que MariaDB soit prÃªt... Tentative $((COUNT + 1))/$MAX_RETRIES"
		sleep 2
		COUNT=$((COUNT + 1))
done

if [ $COUNT -eq $MAX_RETRIES ]; then
		echo "âŒ Ã‰chec de la connexion Ã  la base de donnÃ©es aprÃ¨s $MAX_RETRIES tentatives."
		exit 1
fi

echo "âœ… MariaDB est prÃªt. CrÃ©ation de la base de donnÃ©es et des utilisateurs..."

# DÃ©finir le mot de passe root
mysql -u root << EOF
ALTER USER 'root'@'localhost' IDENTIFIED BY '${SQL_ROOT_PASSWORD}';
FLUSH PRIVILEGES;
EOF

# Utiliser le mot de passe root pour la configuration suivante
mysql -u root -p"${SQL_ROOT_PASSWORD}" << EOF
CREATE DATABASE IF NOT EXISTS \`${SQL_DATABASE}\`;
CREATE USER IF NOT EXISTS '${SQL_USER}'@'%' IDENTIFIED BY '${SQL_PASSWORD}';
GRANT ALL PRIVILEGES ON \`${SQL_DATABASE}\`.* TO '${SQL_USER}'@'%';
FLUSH PRIVILEGES;
EOF

echo "ğŸ‰ Configuration de la base de donnÃ©es terminÃ©e avec succÃ¨s !"

# ArrÃªt de MariaDB pour un redÃ©marrage en mode production
echo "ğŸ”¥ DÃ©marrage de MariaDB en avant-plan..."
mysqladmin -u root -p"${SQL_ROOT_PASSWORD}" shutdown

sleep 2

# DÃ©marrer MariaDB en avant-plan (foreground)
exec mysqld_safe